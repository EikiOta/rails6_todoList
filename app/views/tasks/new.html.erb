<h1>投稿画面</h1>
<%= link_to '一覧へ', "/"%>

<%= form_with model: @task do |form| %>
  <div>
    <%= form.label :タスク名 %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :タスクの詳細 %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit :作成 %>
  </div>
<% end %>